{
  "name": "padrone",
  "version": "1.0.0-beta.1",
  "description": "Create type-safe, interactive CLI apps with Zod schemas",
  "keywords": [
    "cli",
    "command-line",
    "zod",
    "typescript",
    "type-safe",
    "parser",
    "arguments",
    "options",
    "ai",
    "vercel-ai",
    "standard-schema"
  ],
  "homepage": "https://gkurt.com/padrone/",
  "bugs": {
    "url": "https://github.com/KurtGokhan/padrone/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KurtGokhan/padrone.git",
    "directory": "packages/padrone"
  },
  "license": "MIT",
  "author": {
    "name": "Gokhan Kurt",
    "email": "krtgkn@gmail.com",
    "url": "https://gkurt.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "padrone@dev": "./src/index.ts",
      "source": "./src/index.ts"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --dts --sourcemap",
    "dev": "bun src/index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "bundle": "bun run build && bun ../../scripts/copyPackageJson.ts",
    "publish-to-npm": "bun run bundle && cd dist && bun publish --access public"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.1.0"
  },
  "devDependencies": {
    "ai": "^6.0.3",
    "tsdown": "^0.18.3",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "ai": "5 || 6",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
