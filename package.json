{
  "name": "@zodrun/root",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Create interactive CLI apps with Zod schemas",
  "homepage": "https://gkurt.com/zodrun/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/KurtGokhan/zodrun.git"
  },
  "license": "MIT",
  "author": {
    "name": "Gokhan Kurt",
    "email": "krtgkn@gmail.com",
    "url": "https://gkurt.com"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "start": "bun --workspace=zodrun start",
    "docs": "bun --workspace=zodrun-docs start",
    "test": "bun test",
    "types": "tsgo",
    "lint": "biome lint",
    "format": "biome format",
    "check": "biome check",
    "prepare": "husky",
    "bump": "bumpp -r --no-push",
    "publish-to-npm": "bun run --filter '*' publish-to-npm"
  },
  "dependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251201.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@biomejs/biome": "2.3.8",
    "@changesets/cli": "^2.29.8",
    "bumpp": "^10.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
