{
  "name": "@padrone/root",
  "version": "1.0.0-beta.5",
  "type": "module",
  "private": true,
  "description": "Create interactive CLI apps with Zod schemas",
  "homepage": "https://gkurt.com/padrone/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/KurtGokhan/padrone.git"
  },
  "license": "MIT",
  "author": {
    "name": "Gokhan Kurt",
    "email": "krtgkn@gmail.com",
    "url": "https://gkurt.com"
  },
  "workspaces": [
    "docs",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "example": "bun --filter=@padrone/example start",
    "start": "bun --filter=padrone start",
    "docs": "bun --filter=padrone-docs start",
    "test": "bun test --conditions=padrone@dev",
    "types": "tsgo",
    "lint": "biome lint",
    "format": "biome format",
    "check": "biome check",
    "checks": "bun check && bun run test && bun types",
    "prepare": "husky",
    "bump": "bumpp -r --no-push"
  },
  "dependencies": {
    "@typescript/native-preview": "7.0.0-dev.20251227.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "bumpp": "^10.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
